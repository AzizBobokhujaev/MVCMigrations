
@model Food

<form method="post" asp-action="Create" asp-controller="Food">
    <div asp-validation-summary="All" />
    <label>Name</label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name"></span>
    <label>Price</label>
    <input class="form-control" asp-for="Price" />
    <span asp-validation-for="Price"></span><br />    
    <input class="btn btn-success" type="submit" title="Create" value="Create" />
    <input class="btn btn-danger" type="reset" title="" value="Cancel" />
</form>
